<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?card_background"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clickableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/padding_middle">

            <TextView
                android:id="@+id/isfinal"
                style="@style/TextStyle.Type.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_middle"
                android:background="@drawable/back_final"
                android:ellipsize="end"
                android:text="@string/isfinal"
                android:textColor="?textColorPrimary"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/name"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <tech.hombre.freelancehunt.common.widgets.CustomImageView
                android:id="@+id/icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="@dimen/padding_middle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/isfinal"
                tools:background="@color/colorPrimary" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:barrierMargin="@dimen/padding_small"
                app:constraint_referenced_ids="icon, skill"
                app:layout_constraintTop_toBottomOf="@id/icon" />

            <TextView
                android:id="@+id/name"
                style="@style/TextStyle.Heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_middle"
                android:layout_marginEnd="@dimen/padding_middle"
                android:ellipsize="end"
                android:textColor="?textColorSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="@id/icon"
                tools:text="Corporate Identity and Logo for Health Supplement Company" />

            <TextView
                android:id="@+id/skill"
                style="@style/TextStyle.Title.Sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_middle"
                android:layout_marginBottom="@dimen/padding_middle"
                android:textColor="?textColorSecondary"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintTop_toBottomOf="@id/name"
                tools:text="Фирменный стиль и логотип" />

            <TextView
                android:id="@+id/budget"
                style="@style/TextStyle.Heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_middle"
                android:drawableStart="@drawable/purse"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center"
                android:textColor="?textColorSecondary"
                app:layout_constraintStart_toStartOf="@id/icon"
                app:layout_constraintTop_toBottomOf="@id/barrier"
                tools:text="8 500 ₴" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="applications,finalAt"
                app:flow_horizontalBias="1"
                app:flow_horizontalGap="@dimen/padding_small"
                app:flow_horizontalStyle="packed"
                app:flow_verticalBias="0"
                app:flow_wrapMode="chain"
                app:layout_constraintEnd_toEndOf="@id/name"
                app:layout_constraintStart_toEndOf="@id/budget"
                app:layout_constraintTop_toBottomOf="@id/barrier" />

            <TextView
                android:id="@+id/applications"
                style="@style/TextStyle.Type.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/parcel"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center"
                tools:text="12 участников" />

            <TextView
                android:id="@+id/finalAt"
                style="@style/TextStyle.Type.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/calendar"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center"
                android:textColor="?textColorSecondary"
                tools:text="Через 2 дня" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

