<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.view.LoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_large"
                app:srcCompat="@mipmap/logo" />

            <TextView
                android:id="@+id/authCodeHint"
                style="@style/TextStyle.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="40dp"
                android:autoLink="web"
                android:gravity="center_horizontal"
                android:text="Для входа в приложение введите token, полученный по адресу\nhttps://freelancehunt.com/my/api"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/codeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/token"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_middle"
                    android:layout_marginEnd="@dimen/padding_middle"
                    android:background="@drawable/bottom_border_shadow"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:hint="Api Token"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/loginLoadingProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_standart"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/doLogin"
                    style="@style/DefaultButtonStyle"
                    android:layout_width="144dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="@dimen/padding_standart"
                    android:elevation="6dp"
                    android:stateListAnimator="@null"
                    android:text="Войти"
                    android:translationZ="5dp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>